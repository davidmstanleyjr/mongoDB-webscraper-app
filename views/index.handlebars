

<header class="header">
  <h1 id="neon">[ David's Web-scrape App ]</h1>
  <nav class="button-group">
    <button class="button-dark" id="scrape" data-toggle="modal" data-target="#alertModal">Scrape New Articles</button>
    <a href="/articles/viewSaved"><button class="button-dark" id="viewSaved">View Saved Articles</button></a>
  </nav>
</header>
<div class="filler"></div>

{{#each articles}}
  {{#unless saved}}
    <figure class="storyPanel clearfix">


        <a href={{storyUrl}} class="storyLink" target="_blank">
          <h2 class="storyHeadline">{{this.headline}}</h2>
        </a>

        <button class="saveArticle" data-id={{this._id}}>Save</button>

    </figure>
  {{/unless}}
{{/each}}



{{!--this modal alerts the number of articles that have been scraped--}}
<div id="alertModal" class="modal fade" role="dialog">
  <div class="modal-dialog modal-md">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>
      <div class="modal-body text-center">
        <h2>You have scraped <span id="numArticles"></span> new articles</h2>
      </div>
    </div>
  </div>
</div>



{{!--this is an error modal --}}
<div id="error" class="modal fade" role="dialog">
  <div class="modal-dialog modal-md">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>
      <div class="modal-body">
        <h2>Something went wrong. My bad.</h2>
      </div>
    </div>
  </div>
</div>